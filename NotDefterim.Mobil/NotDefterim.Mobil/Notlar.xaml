<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotDefterim.Mobil.Notlar">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lstNotlar">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Baslik}" TextColor="Red"></Label>
                                <Label Text="{Binding icerik}" TextColor="Black"></Label>
                                <Label Text="-------------------------"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout>
                <Label Text="Başlık"></Label>
                <Entry x:Name="txtBaslik"></Entry>
                <Label Text="İçerik"></Label>
                <Editor x:Name="txtIcerik" ></Editor>
                <Button Text="Kaydet" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>